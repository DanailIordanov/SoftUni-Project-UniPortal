@model SubmissionCreateBindingModel

<form action="/Assignments/@Model.AssignmentId/Submissions/Create?returnUrl=@Context.Request.Path" method="post" asp-antiforgery="true">

    <input asp-for="AssignmentId" style="display:none">

    <div class="md-form">
        <input asp-for="Name" class="form-control">
        <label asp-for="Name"></label>
    </div>

    <div class="md-form">
        <textarea asp-for="Comment" class="form-control md-textarea" rows="4"></textarea>
        <label asp-for="Comment"></label>
    </div>

    <div class="md-form">
        <input asp-for="Url" class="form-control">
        <label asp-for="Url"></label>
    </div>

    <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Submit</button>

</form>
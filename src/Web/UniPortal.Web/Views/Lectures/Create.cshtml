@model UniPortal.Web.BindingModels.Lectures.CreateBindingModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-10 offset-md-1">
        <form asp-action="Create" class="form border-primary-4 rounded p-3 w-60 mx-auto mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display:none">
                <input asp-for="CourseId" />
            </div>
            <div class="row d-flex justify-content-center">
                <div class="form-group w-100 mx-auto">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row d-flex justify-content-between">
                <div class="form-group w-100 mx-auto">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-center">
                <a asp-action="Index" class="btn btn-primary">Back</a>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
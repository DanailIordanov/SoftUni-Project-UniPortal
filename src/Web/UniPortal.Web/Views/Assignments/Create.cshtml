@model AssignmentCreateBindingModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="container-fluid">
    <form asp-action="Create" class="form border-primary-4 rounded p-3 w-60 mx-auto mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div style="display:none">
            <input asp-for="CourseId" />
        </div>
        <div class="row d-flex justify-content-center">
            <div class="form-group w-50 mx-auto">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="row d-flex justify-content-between mx-auto">
            <div class="form-group w-100">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row d-flex justify-content-between mx-auto">
            <div class="form-group col-6">
                <label asp-for="MaxPoints" class="control-label"></label>
                <input asp-for="MaxPoints" type="number" class="form-control" />
                <span asp-validation-for="MaxPoints" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex justify-content-center">
            <a href="Index" class="btn btn-primary">Back</a>
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</div>


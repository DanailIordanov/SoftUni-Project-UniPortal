@model IEnumerable<AssignmentIndexViewModel>
@{
    ViewData["Title"] = "Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center m-auto text-uppercase text-primary py-5 px-3">@ViewData["Title"]</h1>

<div class="table-add d-flex justify-content-end mb-3 mr-3">
    <a href="Assignments/Create" class="text-success">
        <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
    </a>
</div>

<hr class="mb-3">
<div class="container-fluid mt-3">
    @if (Model.Any())
    {
        foreach (var assignment in Model)
        {
            <div class="card text-center">
                <div class="card-header d-inline-flex">
                    <div class="col-lg-4 col-sm-6">
                        @assignment.Status.ToString()
                    </div>
                    <div class="col-lg-4">
                        <div class="progress md-progress mt-2" style="height: 10px">
                            <div class="progress-bar" role="progressbar" style="width: 25%; height: 10px" aria-valuenow="@((int)assignment.Status)" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        Points: 0/@assignment.MaxPoints
                    </div>
                </div>
                <div class="card-body row">
                    <div class="col-md-8">
                        <h5 class="card-title">@assignment.Name</h5>
                        <p class="card-text">@assignment.Description</p>

                    </div>
                    <div class="col-md-4">
                        <a href="Assignments/Details/@assignment.Id" class="btn btn-primary">Show more <i class="fas fa-angle-double-right"></i></a>

                    </div>
                </div>
                <div class="card-footer text-muted">
                    Deadline: @assignment.Deadline
                </div>
            </div>
        }
    }
    else
    {
        <div class="card my-4">
            <div class="card-body text-center">There are currently no assignments for this course.</div>
        </div>
    }

    <div class="form-group mt-3 d-flex justify-content-end">
        <a asp-controller="Courses" asp-action="Index" class="btn btn-sm btn-primary">Back to Courses</a>
    </div>
</div>


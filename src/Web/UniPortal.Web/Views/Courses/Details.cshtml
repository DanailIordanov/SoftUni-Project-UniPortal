@model DetailsViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center m-auto">@ViewData["Title"]</h1>
<hr />
<div class="container-fluid">
    <div class="row mt-md-5">
        <div class="col-md-6">
            <div class="row my-3 mx-auto d-flex justify-content-center">
                <p class="font-weight-bold">@Model.SemesterName</p>
            </div>
            <div class="row my-3 mx-auto">
                <p>@@@Model.Location, Room @Model.Room</p>
            </div>
            <div class="row my-3 mx-auto">
                <p>Language: @Model.Language</p>
            </div>
            <div class="row my-3 mx-auto">
                @if (Model.Requirements != null)
                {
                    <p>It is recommended that you have already passed the following courses: @Model.Requirements</p>
                }
                else
                {
                    <p>There are no particular requirements for this course.</p>
                }
            </div>
        </div>
        <div class="col-md-6 d-flex align-content-end">
            <img class="img-thumbnail" src="@Model.ImageUrl" />
        </div>
    </div>
    <div class="row mx-auto">
        <div class="col-md-6">
            <div class="row mt-2 mx-auto d-flex justify-content-center">
                <label class="font-weight-bold" asp-for="@Model.Aims"></label>
            </div>
            <div class="row mx-auto d-flex justify-content-center">
                @Model.Aims
            </div>
        </div>
        <div class="col-md-6">
            <div class="row mt-4 mx-auto d-flex justify-content-center">
                <label class="font-weight-bold" asp-for="@Model.Description"></label>
            </div>
            <div class="row mx-auto d-flex justify-content-center">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>

<div class="form-group mt-3 d-flex justify-content-end">
    <a asp-controller="Courses" asp-action="Index" class="btn btn-sm btn-primary">Back to Courses</a>
</div>

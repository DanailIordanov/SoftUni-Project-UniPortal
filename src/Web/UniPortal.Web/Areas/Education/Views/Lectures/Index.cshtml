@model CourseLectureIndexViewModel
@{
    ViewData["Title"] = "Lectures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center m-auto text-uppercase text-primary py-5 px-3">@ViewData["Title"]</h1>

<div class="table-add d-flex justify-content-end mb-3 mr-3">
    <a href="/Internal/Courses/@Model.Id/Lectures/Create" class="text-success">
        <i class="fas fa-plus fa-2x" aria-hidden="true"></i>
    </a>
</div>

<hr class="mb-3">
@if (Model.Lectures.Any())
{
    @foreach (var lecture in Model.Lectures)
    {
        <!--Accordion wrapper-->
        <div class="accordion md-accordion accordion-3 z-depth-1-half" id="accordionEx194" role="tablist" aria-multiselectable="true">
            <!-- Accordion card -->
            <div class="card">

                <!-- Card header -->
                <div class="card-header" role="tab" id="@lecture.Name">
                    <a class="collapsed" data-toggle="collapse" data-parent="#accordionEx194" href="#collapse@(lecture.Id)"
                       aria-expanded="false">
                        <h5 class="text-primary d-inline-flex my-2">@lecture.Name</h5>
                        <i class="fas fa-angle-down rotate-icon fa-2x my-2 float-right"></i>
                    </a>
                </div>

                <!-- Card body -->
                <div id="collapse@(lecture.Id)" class="collapse" role="tabpanel" aria-labelledby="@lecture.Name" data-parent="#accordionEx194">
                    <div class="card-body p-3">
                        <p class="text-justify">@lecture.Content</p>
                    </div>
                </div>

            </div>
            <!-- Accordion card -->
        </div>
        <!--/.Accordion wrapper-->
    }
}
else
{
    <div class="card my-4">
        <div class="card-body text-center">There are currently no available lectures for this course.</div>
    </div>
}

<div class="form-group mt-3 d-flex justify-content-end">
    <a asp-controller="Courses" asp-action="Index" class="btn btn-sm btn-primary">Back to Courses</a>
</div>
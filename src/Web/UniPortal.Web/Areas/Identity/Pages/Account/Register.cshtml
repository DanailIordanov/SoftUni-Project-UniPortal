@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row d-flex justify-content-between">
                <div class="form-group col-2 mx-auto">
                    <label asp-for="Input.Title" class="control-label"></label>
                    <input asp-for="Input.Title" class="form-control" rows="5" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="form-group col-4 mx-auto">
                    <label asp-for="Input.FirstName" class="control-label"></label>
                    <input asp-for="Input.FirstName" class="form-control" rows="5" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-4 mx-auto">
                    <label asp-for="Input.LastName" class="control-label"></label>
                    <input asp-for="Input.LastName" class="form-control" rows="5" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-2 mx-auto">
                    <label asp-for="Input.Age" class="control-label"></label>
                    <input asp-for="Input.Age" class="form-control" rows="5" />
                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
            </div>
            <div class="row d-flex justify-content-between">
                <div class="form-group col-12 mx-auto">
                    <label asp-for="Input.Address"></label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="row d-flex justify-content-between">
                <div class="form-group col-4 mx-auto">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group col-4 mx-auto">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group col-4 mx-auto">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
